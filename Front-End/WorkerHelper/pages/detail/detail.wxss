/* pages/detail/detail.wxss */
.weui-form-preview__hd, .weui-form-preview__bd{
	text-align: initial;
}

.weui-form-preview__btn.weui-form-preview__btn_primary{
	color: dodgerblue;
}

page{
	background: white;
}


.rank__list {
  padding: 0 3px 3px;
}

.rank__item {
  padding: 3px 0;
  border-bottom: 1px dashed #ddd;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #fff;
  color: #4e4f54;
}


.rank__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 3px;
}

.rank__name {
  font-size: 18px;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.rank__detail {
  font-size: 14px;
  word-break: break-all;
  word-wrap: break-word;
}


.rank__tip {
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 0 15px 15px;
}
