<view style ="height: 50rpx;"></view>


  

<!-- 标签页 -->
<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">查公司</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">查城市</view>  
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">查岗位</view>  
     
</view>

<view style ="height: 50rpx;"></view>
<!-- 搜索输入区域 -->
<view class='input_info_view'>
  <view class="content">
    <van-icon name="search" class='search-icon' size="35rpx"/>
    <input 
      bindinput="handleInput"
      bindconfirm="handleConfirm"
      type="text"
      value="{{inputValue}}" 
      placeholder="{{placeholder}}"
      placeholder-class="placeholder-class"
      class="input"
      confirm-type="search"
    ></input>
   
  <!-- 清除输入框内容 -->
    <van-icon name="cross"
    wx:if="{{inputValue}}" 
     bindtap="handleDeleteClick"
     class="delete-icon"/>
  </view>
</view>

<!-- 最近搜索 S -->
<view class="headline" wx:if="{{historyStorage.length!=0}}" hidden="{{historyStorageShow?false:true}}">
      <view class="head-headline justify">
        <view class="headline-size">历史记录</view>
        <view class="right size" catchtap="remove">清除</view>
      </view>
      <!-- 最近搜索内容 S -->
      <view class="lately-main">
        <view class="chunk" wx:for="{{historyStorage}}" wx:key="index" bindtap='routeToSearchResPage' data-index='{{index}}'>
          <text>{{item}}</text>
        </view>
      </view>
      <!-- 最近搜索内容 E -->
</view>



<!-- 滑动页面 -->
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <!-- list1  -->
      <swiper-item>   
       111
      </swiper-item> 
  <!-- list2  -->
      <swiper-item>  
       222
      </swiper-item>  
  <!-- list3  -->
      <swiper-item>  
       333
      </swiper-item>  
  </swiper>





  

<!-- 瀑布图 -->
<view hidden='{{hidden_waterfall}}' class='content'>
  <view class="left">
    <block wx:for="{{waterfall}}" wx:key="">
      <navigator url='../post/index?_postid={{item.post_id}}'>
        <image class='item-img' src='{{item.file_id}}' wx:if='{{index%2==0}}' mode='widthFix'></image>
      </navigator>
    </block>
  </view>
  <view class="right">
    <block wx:for="{{waterfall}}" wx:key="">
      <navigator url='../post/index?_postid={{item.post_id}}'>
        <image class='item-img' src='{{item.file_id}}' wx:if='{{index%2==1}}' mode='widthFix'></image>
      </navigator>
    </block>
  </view>
</view>

<!-- 搜索出的动态 -->
<view hidden='{{hidden_search_post}}' class='container'>
  <block wx:for='{{post}}' wx:key='{{_id}}'>
    <navigator url='../post/index?_postid={{item._id}}'>
      <view class='user-like-view'>
        <image class='user-like-avatar' src='{{item.avatarUrl}}'>
        </image>
        <view class='like-text'>
          <text style='font-weight:bold'>{{item.nickName}}</text>
          {{item.post_text}}
        </view>
        <view class='like-time'>
          {{item.post_time}}
        </view>
        <image class='post-image-preview' src='{{item.image}}'>
        </image>
      </view>
    </navigator>
  </block>
</view>

<!-- 搜索出的用户 -->
<view hidden='{{hidden_search_user}}' class='container'>
  <block wx:for='{{user}}' wx:key='{{_id}}'>
    <navigator url='../others/index?_id={{item._openid}}'>
      <view class='user-view'>
        <image src='{{item.user_info.avatarUrl}}' class='user-avatar'>
        </image>
        <view class='user-nickName'>
          {{item.user_info.nickName}}
        </view>
      </view>
    </navigator>
  </block>
</view>




