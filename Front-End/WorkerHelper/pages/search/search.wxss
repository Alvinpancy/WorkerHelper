/* miniprogram/pages/search2/index.wxss */

.search-view {
  width: 750rpx;
  height: 80rpx;
  /* background-color: #6094e2; */
  background-color: rgb(255, 255, 255);
  position: relative;
}

.search-navigator{
  widows: 750rpx;
  height: 60rpx;
  background-color: white;
  position: relative
}

.navigator-left, .navigator-right{
  position: absolute;
  height: 60rpx;
  line-height: 60rpx;
  width: 200rpx;
  text-align: center;
  align-content: center;
}

.navigator-left{
  left: 75rpx;
}

.navigator-right{
  right: 75rpx;
}

.search-input {
  position: absolute;
  border: solid 1rpx rgb(0, 0, 0);
  width: 65%;
  height: 60rpx;
  border-radius: 30rpx;
  left: 20rpx;
  top: 10rpx;
  font-size: 30rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.search-btn {
  position: absolute;
  right: 20rpx;
  border: solid 1rpx rgb(0, 0, 0);
  background-color: white;
  width: 22%;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  align-content: center;
  font-size: 30rpx;
  top: 10rpx;
}

.search-text{
  color: rgb(0, 0, 0);

}

.container{
  
  width: 750rpx;
}
.user-like-view{
  width: 750rpx;
  height: 150rpx;
  background-color: white;
  position:  relative;
  border-bottom: 1px solid #ccc;
}
.user-like-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  left: 20rpx;
  top: 30rpx;
}

.post-image-preview{
  width: 120rpx;
  height: 120rpx;
  top: 20rpx;
  right: 20rpx;
  position: absolute;
}

.nav-top{
  position: fixed;
  top: 0;
  background-color: bisque;
  height: 100rpx;
  width: 100%;
}

/* 文本 */
.like-text{
  top: 30rpx;
  left: 130rpx;
  width: 700rpx;
  font-size: 30rpx;
  position: absolute;
}

.like-time{
  font-size: 25rpx;
  top: 80rpx;
  left: 130rpx;
  width: 700rpx;
  color: rgb(90, 90, 90);
  position: absolute;
}

.image {
  width: 100%;
  margin: 0 auto;
}

.time-text {
  font-size: 14px;
  color: #fff;
}

.item-text-view {
  background: #000;
  height: 30px;
  position: relative;
  margin-top: -35px;
  display: block;
  opacity: 0.6;
}

.content {
  margin: 0.5%;
}

.item {
  width: 98%;
  height: auto;
  text-align: center;
  margin-left: 0.5%;
  margin-right: 0.5%;
  margin-bottom: 0.5%;
  display: inline-block;
  border: 1px solid #ccc;
}

.item-img{
  width: 100%;
}

.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}

.user-view{
  width: 750rpx;
  height: 100rpx;
  position: relative;
}

.user-avatar{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  left: 20rpx;
  top: 10rpx;
}

.user-nickName{
  position: absolute;
  font-size: 30rpx;
  left: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  top: 20rpx;
  align-content: center;
}


.intro {
  margin: 30px;
  text-align: center;
}

/* 标签页 */
.swiper-tab{  
  width: 100%;  
  
  text-align: center;  
  line-height: 80rpx;
}  
.swiper-tab-list{  
  font-size: 30rpx;
  color: rgb(170, 170, 170);  
  display: inline-block;  
  width: 25%;  
}  
.on{
 border-bottom: 2rpx solid #000000;
 border-top:0;
 border-left:0;
 border-right:0;
 border-image: linear-gradient(to right,#ffffff,#505050,#ffffff) 1 ;
 color:black;
 font-weight:500 ;
}   
.swiper-box{ 
display: block; 
height: 100%; 
width: 100%; 
overflow: hidden;
}   
.swiper-items{
height: 100%;
}
.scroll-views{
height: 100%;
}

/* 输入框 */
.content {
  height: var(--box-height);
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-right: 20rpx;
  background: rgba(255, 255, 255, 0);
  border-radius: var(--box-radius);
  border: 2rpx solid rgb(0, 0, 0);
  flex: 1;
  display: flex;
  align-items: center;
}
.search-icon {
  margin-left: 20rpx;
  width: 45rpx;
  height: 40rpx;
  
  
  color:rgb(80, 80, 80)
}
.input {
  flex: 1;
  margin: 0 20rpx;
  
  height: 60rpx;
}

.placeholder-class{
  color:rgb(172, 172, 172);
  font-size: 30rpx;
}
.delete-icon {
  margin-right: 0rpx;
  width: 40rpx;
  height: 40rpx;
  color:rgb(172, 172, 172)
}

/* 历史记录 */

.headline {
  padding-top: .5rem;
}

.justify {
  display: flex;
  justify-content: space-between;
}


.headline-size {
  width: 185rpx;
  font-size: 35rpx;
  float: left;
}
.size {
  /* flex: 1; */
  float: right;
  font-size: 30rpx;
  color: #d4237a;
  /* position: absolute; */
  bottom:0px;
  align-self: center;
 }


.lately-main .chunk {
  display: inline-block;
  font-size: 25rpx;
  line-height: 20rpx;
  padding: 20rpx 20rpx;
  background: #f5f5f5;
  margin-right: 30rpx;
  border: 1px solid #DCDCDC;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
  /* float: left; */
  }


  
  



