<!--pages/personal/index.wxml-->
<view class='uparea'>

<image src='https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fup.enterdesk.com%2Fedpic%2Fec%2Fca%2Fd8%2Feccad87a334d082b8ff200ae01157e44.jpg&refer=http%3A%2F%2Fup.enterdesk.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1640548373&t=d67e7d062760ba27450f057629be85f7' class='user-avatar'>
</image>

<view class='user-nickname'>
  {{user_info.nickName}}
</view>

<view class='user-post' bindtap='clickPost'>
  <view class='post-number-text' style="width: 127rpx; height: 46rpx; display: block; box-sizing: border-box">
    11{{post_cnt}}
  </view>
  <view class='followings-text' style="width: 127rpx; height: 46rpx; display: block; box-sizing: border-box">
    发布
  </view>
</view>

<view class='user-followers' bindtap='clickFollower'>
  <view class='followers-number-text' style="width: 179rpx; height: 46rpx; display: block; box-sizing: border-box">
    <text>12{{follower_cnt}}</text>
  </view>
  <view class='followings-text' style="width: 179rpx; height: 46rpx; display: block; box-sizing: border-box">
    收获赞
  </view>
</view>

<view class='user-followings' bindtap='clickFollowing'>
  <view class='followings-number-text' style="width: 130rpx; height: 46rpx; display: block; box-sizing: border-box">
    12{{following_cnt}}
  </view>
  <view class='followings-text' style="width: 130rpx; height: 46rpx; display: block; box-sizing: border-box">
    收藏
  </view>
</view>
<!-- 
<button class='profile-button'>
  Edit Profile
</button> -->

</view>

<!-- 中部两个导航栏 -->
<view class='navbar'>
<view class='nav-thumbnail' bindtap='tapThumbnail'>
  <image wx:if="{{hidden_thumbnail}}" src="../../image/add-info.png" class='nav-image'>
  </image>
  <image wx:else src="../../image/add-info.png" class='nav-image'>
  </image>
</view>
<view class='nav-detail' bindtap='tapDetail'>
  <image wx:if="{{hidden_detail}}" src="../../image/add-feeling.png" class='nav-image'>
  </image>
  <image wx:else src="../../image/add-feeling.png" class='nav-image'>
  </image>
</view>
</view>
<view class='navbar'>
<view class='nav-thumbnail' bindtap='tapThumbnail'>
  <view class='followings-text'>
    录入
  </view>
</view>
<view class='nav-detail' bindtap='tapDetail'>
  <view class='followings-text'>
    工作幸福指数
  </view>
</view>
</view>

<!-- 缩略图 -->
<view hidden="{{hidden_thumbnail}}" class='scroll-view-css'>
<block wx:for="{{post_array}}" wx:key="{{_id}}">
  <view class='thumbnail-image'>
    <image class='thumbnail-image' src="{{item.images[0].file_id}}" mode='scaleToFill' data-index='{{index}}' bindtap='scrollToDetail'>
    </image>
  </view>
</block>
</view>


<!-- 详细个人post -->
<view hidden="{{hidden_detail}}" class='detail-view'>
<block wx:for="{{post_array}}" wx:key="{{_key}}">
  <view class='detail-post'>
    <view class='post-user-info'>
      <!-- post用户头像 -->
      <image src='{{user_info.avatarUrl}}' class='post-user-avatar'>
      </image>
      <!-- post用户名字 -->
      <view class='post-user-nickname'>
        {{user_info.nickName}}
      </view>
    </view>
    <!-- post用户照片 -->
    <swiper class='swiper-pre'>
      <block wx:for="{{item.images}}" wx:key="{{_id}}">
        <swiper-item class='height: 700rpx'>
          <image class='detail-image' mode='scaleToFill' src='{{item.file_id}}'>
          </image>
        </swiper-item>
      </block>
    </swiper>
    <!-- post图标层 -->
    <view class='post-icons'>
      <!-- 点赞 -->
      <image src='../../images/like_grey.png' class='like-icon'>
      </image>
      <!-- 评论 -->
      <navigator url='../comment/index?_postid={{item._id}}'>
        <image src='../../images/comment_grey.png' class='comment-icon'>
        </image>
      </navigator>
    </view>
    <!-- 赞数 -->
    <view class='number-of-like'>
      <text>like by </text>
      <text style='font-weight: bold'>{{item.likes}}</text>
      <text> users</text>
    </view>
    <!-- post原文 -->
    <view class='post-text'>
      <text style='font-weight: bold'>{{user_info.nickName}}</text>
      <text> {{item.post_text}}</text>
    </view>
  </view>
</block>
</view>


